{{#each reviews as |review|}}
<div class="row mb-4 post">
    <div class="">
        <h2>
            <a href="/review/{{review.id}}">{{review.title}}</a>
        </h2>
        <p>Created by {{review.user.name}} on {{format_date post.createdAt}}</p>
    </div>
    <div class="">
        <p>
            {{review.body}}
        </p>
    </div>
</div>
{{/each}}

<script src="js/api.js"></script>