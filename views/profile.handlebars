<div class="row">
    <div class="col-auto">
        <h2>Welcome, {{name}}</h2>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-6">
        <h3>Create a New Review:</h3>

        <form class="form new-review-form">
            <div class="form-group">
                <label for="review-title">Review Title:</label>
                <input class="form-input" type="text" id="review-title" name="review-title" />
            </div>
            <div class="form-group">
                <label for="review-body">Review Text:</label>
                <textarea class="form-input" id="review-body" name="review-body"></textarea>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Publish</button>
            </div>
        </form>
    </div>

    <div class="col-md-6 review-list">
        {{#if review.length}}

        <h3>Current Reviews:</h3>

        {{#each reviews as |review|}}
        <div class="row mb-2">
            <div class="col-md-8">
                <h4><a href="/review/{{review.id}}">{{review.title}}</a></h4>
            </div>
            <div class="col-md-4">
                 <button class="btn btn-sm btn-danger" data-id="{{review.id}}">DELETE</button>
            </div>
        </div>
        {{/each}}
    </div>
        {{/if}}
</div>


<script src="js/profile.js"></script>